<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="account.report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.user_id.lang})"/>
                <t t-if="o.user_id.lang == 'en_US'">
                    <div class="page">
                        <h2 style="text-align: center;">
                            <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice
                            </span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                            <span t-if="o.type == 'out_refund'">Credit Note</span>
                            <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                            <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                            <span t-field="o.number"/>
                        </h2>
                        <div name="invoice_address">
                            <address t-field="o.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <div t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>:
                                <span t-field="o.partner_id.vat"/>
                            </div>
                        </div>
                        <h3>Test nội dung</h3>

                        <div class="row mt32 mb32">
                            <div class="col-xs-2" t-if="o.name">
                                <strong>Description:</strong>
                                <p t-field="o.name"/>
                            </div>
                            <div class="col-xs-2" t-if="o.date_invoice">
                                <strong>Invoice Date:</strong>
                                <p t-field="o.date_invoice"/>
                            </div>
                            <div class="col-xs-2"
                                 t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                                <strong>Due Date:</strong>
                                <p t-field="o.date_due"/>
                            </div>
                            <div class="col-xs-2" t-if="o.origin">
                                <strong>Source:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div class="col-xs-2" t-if="o.partner_id.ref">
                                <strong>Customer Code:</strong>
                                <p t-field="o.partner_id.ref"/>
                            </div>
                            <div name="reference" class="col-xs-2" t-if="o.reference">
                                <strong>Reference:</strong>
                                <p t-field="o.reference"/>
                            </div>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                        <table class="table table-condensed" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="hidden">Source Document</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit Price</th>
                                    <th t-if="display_discount" class="text-right">Disc.(%)</th>
                                    <th class="text-right">Taxes</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                    <td class="hidden">
                                        <span t-field="l.origin"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.quantity"/>
                                        <span t-field="l.uom_id" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                    </td>
                                    <td class="text-right" id="subtotal">
                                        <span t-field="l.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                                    <td t-translation="off">&amp;nbsp;</td>
                                    <td class="hidden"></td>
                                    <td></td>
                                    <td></td>
                                    <td t-if="display_discount"></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="clearfix">
                            <div id="total" class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed" style="min-width: 250px;max-width: 400px;">
                                        <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                            <td>
                                                <strong>Subtotal</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                            <tr style="border-bottom:1px solid #dddddd;">
                                                <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                        <span>&amp;nbsp;
                                                            <span>on</span>
                                                            <t t-esc="amount_by_group[4]"/>
                                                        </span>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black">
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <p t-if="o.comment">
                            <span t-field="o.comment"/>
                        </p>
                        <p t-if="o.payment_term_id">
                            <span t-field="o.payment_term_id.note"/>
                        </p>
                        <p t-if="o.fiscal_position_id.note">
                            <span t-field="o.fiscal_position_id.note"/>
                        </p>
                    </div>
                </t>
                <t t-if="o.user_id.lang == 'vi_VN'">
                    <div class="page" style="letter-spacing: 0.1em;
                    font-family: Arial, Helvetica, sans-serif; line-height:1.6;
                    font-size: 16px; letter-spacing: 1px">
                        <h2 style="text-align: center;">
                            HÓA ĐƠN
                        </h2>

                        <div t-if="o.partner_id.company_type == 'person' ">

                            <div t-if="o.partner_id.parent_id">
                                <div>
                                    <strong>Khách hàng:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.parent_id.name"/>
                                </div>
                                <div>
                                    <strong>Địa chỉ:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.parent_id.street"/>&amp;nbsp;
                                    <span t-field="o.partner_id.parent_id.city"/>&amp;nbsp;
                                    <span t-field="o.partner_id.parent_id.country_id.name"/>
                                </div>
                                <div>
                                    <strong>Mã số thuế:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.parent_id.vat"/>
                                </div>
                            </div>

                            <div t-if="not o.partner_id.parent_id">
                                <div>
                                    <strong>Khách hàng:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div>
                                    <strong>Địa chỉ:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.street"/>&amp;nbsp;
                                    <span t-field="o.partner_id.city"/>&amp;nbsp;
                                    <span t-field="o.partner_id.country_id.name"/>&amp;nbsp;
                                </div>
                                <div>
                                    <strong>Mã số thuế:</strong>&amp;nbsp;
                                    <span t-field="o.partner_id.parent_id.vat"/>
                                </div>
                            </div>

                        </div>

                        <div t-if="o.partner_id.company_type == 'company' ">
                            <div>
                                <strong>Khách hàng:</strong>&amp;nbsp;
                                <span t-field="o.partner_id.name"/>&amp;nbsp;
                            </div>
                            <div>
                                <strong>Địa chỉ:</strong>&amp;nbsp;
                                <span t-field="o.partner_id.street"/>&amp;nbsp;
                                <span t-field="o.partner_id.city"/>&amp;nbsp;
                                <span t-field="o.partner_id.country_id.name"/>&amp;nbsp;
                            </div>
                            <div>
                                <strong>Mã số thuế:</strong>&amp;nbsp;
                                <span t-field="o.partner_id.parent_id.vat"/>
                            </div>
                        </div>

                        <div class="mt32 mb32">
                            <div t-if="o.name">
                                <strong>Mô tả:</strong>
                                <span t-field="o.name"/>
                            </div>
                            <div t-if="o.date_invoice">
                                <strong>Ngày tạo hóa đơn:</strong>
                                <span t-field="o.date_invoice"/>
                            </div>

                            <div t-if="o.origin">
                                <strong>Nguồn:</strong>
                                <span t-field="o.origin"/>
                            </div>
                            <div t-if="o.partner_id.ref">
                                <strong>Customer Code:</strong>
                                <span t-field="o.partner_id.ref"/>
                            </div>
                            <div name="reference" t-if="o.reference">
                                <strong>Tài liệu:</strong>
                                <span t-field="o.reference"/>
                            </div>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                        <table class="table table-condensed" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th>Mô tả</th>
                                    <th class="hidden">Nguồn tài liệu</th>
                                    <th class="text-right">Số lượng</th>
                                    <th class="text-right">Đơn giá</th>
                                    <th t-if="display_discount" class="text-right">Giảm giá.(%)</th>
                                    <th class="text-right">Thuế</th>
                                    <th class="text-right">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <tr t-foreach="o.invoice_line_ids" t-as="l">
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                    <td class="hidden">
                                        <span t-field="l.origin"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.quantity"/>
                                        <span t-field="l.uom_id" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                    </td>
                                    <td class="text-right" id="subtotal">
                                        <span t-field="l.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                                    <td t-translation="off">&amp;nbsp;</td>
                                    <td class="hidden"></td>
                                    <td></td>
                                    <td></td>
                                    <td t-if="display_discount"></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div id="total" class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed" style="min-width: 250px;max-width: 400px;">
                                        <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                            <td>
                                                <strong>Tổng tiền</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                            <tr style="border-bottom:1px solid #dddddd;">
                                                <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td>
                                                        <span t-esc="amount_by_group[0]"/>
                                                        <span>&amp;nbsp;
                                                            <span>on</span>
                                                            <t t-esc="amount_by_group[4]"/>
                                                        </span>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="amount_by_group[3]"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black">
                                            <td>
                                                <strong>Thành tiền</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
