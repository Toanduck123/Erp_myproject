<!--                        <td align="center">-->
<!--                          <img src="/bms_templates/static/src/img/footer.png" style="padding: 0px; margin: 0px; height: 80px; width: 590px;">-->
<!--                        </td>-->
<!--                      </tr>-->
<!--                      <tr>-->
                    </tbody>
                </table>
                </body>
                </html>
            ]]></field>
        </record>
    </data>
</odoo>
