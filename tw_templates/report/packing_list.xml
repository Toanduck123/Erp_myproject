<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="stock.report_delivery_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page" style="letter-spacing: 0.1em;
                font-family: Arial, Helvetica, sans-serif; line-height:1.6;
                font-size: 16px; letter-spacing: 1px">
                    <h2 style="text-align: center;">PHIẾU GIAO HÀNG
                        <br/>(DELIVERY ORDER)
                    </h2>
                    <div>
                        <b>Khách hàng (Buyer):</b>
                        <spand t-field="o.partner_id.parent_id.name"/>
                    </div>
                    <div>
                        <t t-foreach="o.partner_id.child_ids" t-as="res_partner">
                            <t t-if="res_partner.type == 'delivery'">
                                <p>
                                    <b>Địa chỉ giao hàng (Address):</b>
                                    <t t-esc="res_partner.street"/>,
                                    <t t-esc="res_partner.street2"/>,
                                    <t t-esc="res_partner.city"/>
                                </p>
                            </t>
                        </t>
                        <!--                        <b>Địa chỉ giao hàng (Address):</b>-->
                        <!--                        <spand t-field="o.partner_id.street"/>,-->
                        <!--                        <spand t-field="o.partner_id.city"/>,-->
                        <!--                        <spand t-field="o.partner_id.country_id"/>-->
                    </div>
                    <div>
                        <b>Mã số thuế (Tax code):</b>
                        <spand t-field="o.partner_id.vat"/>
                    </div>
                    <div>
                        <b>Mã số thuế (Tax code):</b>
                        <spand t-field="o.partner_id.vat"/>
                    </div>
                    <div>
                        <b>Người nhận (ATTN):</b>
                        <spand t-field="o.person.name"/>
                    </div>
                    <div>
                        <b>Theo đơn hàng số (PO No):</b>
                        <spand t-field="o.origin"/>
                    </div>
                    <div>
                        <b>Điều kiện thanh toán (Payment):</b>
                        <spand t-field="o.payment"/>
                    </div>
                    <div class="row" name="customer_address">
                        <!--<div class="col-xs-4 pull-right">-->
                        <!--<div>-->
                        <!--<span><strong>Customer Address:</strong></span>-->
                        <!--</div>-->
                        <!--<div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">-->
                        <!--<div t-field="o.move_lines[0].partner_id"-->
                        <!--t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>-->
                        <!--</div>-->
                        <!--<div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">-->
                        <!--<div t-field="o.partner_id"-->
                        <!--t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>-->
                        <!--</div>-->
                        <!--</div>-->
                    </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th t-if="o.origin">
                                    <strong>CHI TIẾT ĐƠN HÀNG (ORDER LINES)</strong>
                                </th>
                                <th name="td_sched_date_h">
                                    <strong>Ngày (Date)</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-if="o.origin">
                                    PO Ref:
                                    <span t-field="o.origin"/>
                                </td>
                                <td name="td_scheduled_date">
                                    <!--                                    <t t-if="o.state == 'done'">-->
                                    <!--                                        <span t-field="o.date_done"/>-->
                                    <!--                                    </t>-->
                                    <!--                                    <t t-if="o.state != 'done'">-->
                                    <!--                                        <span t-field="o.scheduled_date"/>-->
                                    <!--                                    </t>-->
                                    <span t-field="o.scheduled_date"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt32" t-if="o.state!='done'">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Sản phẩm (Product)</strong>
                                </th>
                                <th>
                                    <strong>Đơn vị (Uint)</strong>
                                </th>
                                <th>
                                    <strong>Số lượng (Amount)</strong>
                                </th>
                                <th>
                                    <strong>VAT (%)</strong>
                                </th>
                                <th>
                                    <strong>Đơn giá chưa VAT (VND)</strong>
                                </th>
                                <th>
                                    <strong>Đơn giá có VAT (VND)</strong>
                                </th>
                                <th>
                                    <strong>Thành tiền(Total)</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>

                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <td>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                </td>
                                <td>
                                    <span t-field="move.vat_ids.amount"/>
                                </td>
                                <td>
                                    <span t-field="move.product_id.lst_price"/>
                                </td>
                                <td>
                                    <span t-field="move.price_vat"/>
                                </td>
                                <td>
                                    <span t-field="move.total"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="o.move_line_ids and o.state=='done'">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')"
                           groups="stock.group_production_lot"/>
                        <thead>
                            <tr>
                                <th>
                                    <strong>Sản phẩm (Product)</strong>
                                </th>
                                <th name="lot_serial" t-if="has_serial_number">
                                    Mã số (Lot/Serial Number)
                                </th>
                                <th class="text-center">
                                    <strong>Số lượng (Quantity)</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <t t-if="has_serial_number">
                                    <td>
                                        <table width="100%">
                                            <tr>
                                                <td>
                                                    <span t-field="move_line.lot_id"/>
                                                    <t t-if="not move_line.lot_id">
                                                        <span t-field="move_line.lot_name"/>
                                                    </t>
                                                </td>
                                                <td name="lot_qty">
                                                    <t t-if="move_line.product_qty">
                                                        <span t-field="move_line.product_qty"/>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </t>
                                <td class="text-center">
                                    <span t-field="move_line.qty_done"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <p t-if="o.backorder_id">
                        This shipment is a backorder of
                        <t t-esc="o.backorder_id.name"/>.
                    </p>
                    <p>
                        <t t-if="o.search([('backorder_id', '=', o.id), ('state', 'not in', ['cancel', 'done'])])">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become
                            available.
                        </t>
                    </p>
                    <div>
                        <spand t-field="o.note"/>
                    </div>
                    <div class="container">
                        <table class="table text-center ">
                            <tbody>
                                <tr>
                                    <td class="text-center">
                                        <b>Người bán hàng</b>
                                        <br/>
                                        (Representative)
                                        <br></br>
                                        <br></br>
                                        <br></br>
                                        <br></br>
                                    </td>
                                    <td class="text-center">
                                        <b>Thủ kho</b>
                                        <br/>
                                        (Storekeeper)
                                        <br></br>
                                        <br></br>
                                        <br></br>
                                        <br></br>
                                    </td>
                                    <td class="text-center">
                                        <b>Người giao hàng</b>
                                        <br/>
                                        (Deliver)
                                        <br></br>
                                        <br></br>
                                        <br></br>
                                        <br></br>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <table style="width:100%;">
                            <tr>
                                <td style="text-align: left;">
                                    <b>Phần dành cho khách hàng</b>
                                    <br/>(Area for customer)
                                    <br/>
                                    <b>Người nhận hàng</b>
                                    (ký, ghi rõ họ tên)<br/>Received by (Signed, full name)
                                </td>
                                <td colspan="2">
                                    <p style="text-align: left;">
                                        <b>Xác nhận tình trạng đơn hàng sau khi bàn giao và lắp đặt:</b>
                                    </p>
                                    <br></br>
                                    <p style="text-align: left;">
                                        .............................................................................................................
                                    </p>
                                    <br/>
                                    <p style="text-align: left;">
                                        .............................................................................................................
                                    </p>
                                    <br/>
                                    <p style="text-align: left;">
                                        .............................................................................................................
                                    </p>
                                    <br/>

                                </td>

                            </tr>
                        </table>

                    </div>
                    <div>
                        <h4 class="text-center">Chúng tôi trân trọng cảm ơn sự hợp tác của Quý vị</h4>
                    </div>
                </div>
                <!--                <div style="margin-left: 600px;">-->
                <!--                    <spand t-field="o.company_id"/>-->
                <!--                </div>-->
            </t>
        </t>
    </template>
</odoo>
