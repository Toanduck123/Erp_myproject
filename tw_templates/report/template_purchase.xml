<odoo>
    <template id="purchase.report_purchaseorder_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page" style="letter-spacing: 0.1em;
            font-family: Arial, Helvetica, sans-serif; line-height:1.6;
            font-size: 16px; letter-spacing: 1px">
                <div class="oe_structure"/>
                <h2 style="text-align: center;">ÐƠN ÐẶT HÀNG</h2>
                <h3 style="text-align: center; margin-top: 10px;">
                    <i>(PURCHASE ORDER)</i>
                </h3>
                <div class="row mt32 mb32">
                    <div t-if="o.name" class="col-xs-6">
                        <strong>Yêu cầu báo giá&amp;nbsp;<i>(RFQ#)</i>:
                        </strong>
                        <span t-field="o.name"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-xs-6">
                        <strong>Ðon đặt hàng&amp;nbsp;(PO#):</strong>
                        <span t-field="o.partner_ref"/>
                    </div>
                    <div t-if="o.date_order" class="col-xs-6">
                        <strong>Ngày đặt hàng&amp;nbsp;<i>(PO Date)</i>:
                        </strong>
                        <span t-field="o.date_order"/>
                    </div>
                </div>
                <div>
                    <b>Gửi tới nhà cung cấp
                        <i>(To Vendor)</i>:
                    </b>
                    <span t-field="o.partner_id.name"/>
                </div>
                <div>
                    <t t-if="o.partner_id.street">
                        <b>Ðịa chỉ <i>(Vendor's Address)</i>:
                        </b>
                        <span t-field="o.partner_id.street"/>
                    </t>
                    <t t-if="o.partner_id.street2">
                        ,
                        <span t-field="o.partner_id.street2"/>
                    </t>
                    <t t-if="o.partner_id.city">
                        ,
                        <span t-field="o.partner_id.city"/>
                    </t>
                </div>
                <div>
                    <b>
                        Di động:
                    </b>
                    <span t-field="o.dest_address_id.phone"/>
                </div>
                <div class="row mt32 mb8">
                    <b>&amp;nbsp;&amp;nbsp;THÔNG TIN ÐON HÀNG</b>
                </div>
                <div>

                    <!--                <b>Ðon v? d?t hàng &amp;nbsp;<i>(Client)</i>:</b>-->
                    <!--                <span t-field="o.partner_id"/>-->
                    <div>
                        <t t-if="o.partner_id.name">
                            <b>Ðon vị nhập hàng&amp;nbsp;<i>(Client)</i>:
                            </b>
                            <span t-field="o.company_id"/>
                        </t>
                        <t t-else=""></t>
                    </div>


                    <div>
                        <t t-foreach="o.dest_address_id.child_ids" t-as="dest_address_id">
                            <t t-if="dest_address_id.type == 'invoice'">
                                <p>
                                    <b>Địa chỉ xuất hóa đơn&amp;nbsp;<i>(Invoice Address)</i>:
                                    </b>
                                    <t t-esc="dest_address_id.street"/>,
                                    <t t-esc="dest_address_id.street2"/>,
                                    <t t-esc="dest_address_id.city"/>
                                </p>
                            </t>
                        </t>
                        <!--                        <b>Ð?a ch? xu?t hóa don <i>(Invoice Address)</i>:-->
                        <!--                        </b>-->
                        <!--                        <span t-field="o.dest_address_id.name"/>-->
                        <!--                        <span>-->
                        <!--                            - -->
                        <!--                        </span>-->
                        <!--                        <span t-field="o.dest_address_id.street"/>,-->
                        <!--                        <span t-field="o.dest_address_id.city"/>, &amp;nbsp;Vi?t Nam-->
                    </div>
                    <div>
                        <t t-foreach="o.dest_address_id.child_ids" t-as="dest_address_id">
                            <t t-if="dest_address_id.type == 'delivery'">
                                <p>
                                    <b>Địa chỉ giao hàng&amp;nbsp;<i>(Delivery Address)</i>:
                                    </b>
                                    <t t-esc="dest_address_id.street"/>,
                                    <t t-esc="dest_address_id.street2"/>,
                                    <t t-esc="dest_address_id.city"/>
                                </p>
                            </t>
                        </t>
                        <!--                        <b>Ð?a ch? g?i hàng-->
                        <!--                            <i>(Delivery Address)</i>:-->
                        <!--                        </b>-->
                        <!--                        <span t-field="o.dest_address_id.name"/>-->
                        <!--                        <span>-->
                        <!--                            - -->
                        <!--                        </span>-->
                        <!--                        <span t-field="o.dest_address_id.street"/>,-->
                        <!--                        <span t-field="o.dest_address_id.city"/>, &amp;nbsp;Vi?t Nam-->
                    </div>
                    <div>
                        <b>Nguời đặt hàng&amp;nbsp;<i>(Contact)</i>:
                        </b>
                        <span t-field="o.person_set"/>
                        <!--                    - -->
                        <!--                    <span t-field="o.person_set.phone"/>-->
                        <!--                    - -->
                        <!--                    <span t-field="o.person_set.mobile"/>-->
                    </div>
                    <div>
                        <b>Thời gian giao hàng&amp;nbsp;<i>(Delivery date)</i>:
                        </b>
                        <span t-field="o.date_planned"/>
                    </div>

                </div>
                <div>
                    <strong>CHI TIẾT ĐƠN HÀNG (ORDER LINES)</strong>
                </div>
                <table class="table table-condensed text-center">
                    <thead style="text: center">
                        <tr>
                            <th>
                                <strong>Sản Phẩm
                                    <i>(Description)</i>
                                </strong>
                            </th>
                            <th>
                                <strong>Thuế
                                    <i>(Taxes)</i>
                                </strong>
                            </th>
                            <th class="text-center">
                                <strong>Ngày giao
                                    <br/>
                                    <i>(Date Req)</i>
                                </strong>
                            </th>
                            <th class="text-right">
                                <strong>Số lượng
                                    <br/>
                                    <i>(Qty)</i>
                                </strong>
                            </th>
                            <th class="text-right">
                                <strong>Ðơn giá
                                    <br/>
                                    <i>(Unit Price)</i>
                                </strong>
                            </th>
                            <th class="text-right">
                                <strong>Thành tiền
                                    <br/>
                                    <i>(Amount)</i>
                                </strong>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td>
                                <span t-field="line.name"/>
                            </td>
                            <td>
                                <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_subtotal"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td>
                                    <strong>Thành tiền
                                        <i>(Subtotal)</i>
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Thuế
                                    <i>(Taxes)</i>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td>
                                    <strong>Tổng
                                        <i>(Total)</i>
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <p t-field="o.notes"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

</odoo>
